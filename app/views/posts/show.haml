%div#post-content
	%h1
		=@post.title
	%p.date
		Submitted:
		= time_ago_in_words(@post.created_at)
		- if user_signed_in?
			|
			= link_to 'Edit', edit_post_path(@post), class: 'link'
	%p=@post.body

	%div#comments
		%h2="#{@post.comments.count} Comments"
		= render @post.comments
		%h3 Join Discussion
		= render partial: "comments/form"