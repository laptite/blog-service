%div.post-wrapper
	- @posts.each do |post|
		%div.post
			%h3.title=link_to post.title, post_path(post), class: 'link'
			.date
				= "Created #{time_ago_in_words(post.created_at)} ago"
				- if user_signed_in?
					|
					= link_to "Edit", edit_post_path(post), class: 'link'
					|
					= link_to "Delete", post_path(post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?'}, class: 'link'
			%p.body=truncate(post.body, length: 100)
			%hr
			