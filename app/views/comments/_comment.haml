%div.clearfix.comment
	%div.comment-content
		%p.comment-name
			%strong= comment.name
		%p.comment-body= comment.body
		%p.comment-time= "#{time_ago_in_words(comment.created_at)} ago"

	-# %p= link_to "Delete", [comment.post, comment], method: :delete, data: { confirm: 'Are you sure you want to delete this comment?'}, class: 'button'
	
	%p= link_to "Delete", post_comments_path(comment.post, comment.post_id), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?'}, class: 'button'
	